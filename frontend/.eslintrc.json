{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "prettier/prettier",
    "prettier",
    "react-app",
    "airbnb-typescript"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "overrides": [],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "project": "tsconfig.json"
  },
  "plugins": ["react", "@typescript-eslint", "prettier"],
  "rules": {
    "prettier/prettier": 0,
    "no-unused-vars": "warn",
    "no-console": "off",
    "func-names": "off",
    "no-process-exit": "off",
    "object-shorthand": "off",
    "class-methods-use-this": "off",
    "no-extraneous-dependencies": 0,
    "linebreak-style": 0,
    "object-curly-newline": "off",
    "import/extensions": [
      "error",
      "ignorePackages",
      { "": "never", "js": "never", "jsx": "never", "ts": "never", "tsx": "never" }
    ],
    "comma-dangle": "off",
    "@typescript-eslint/comma-dangle": "off",
    "block-spacing": 0
  }
}
